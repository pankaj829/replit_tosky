# AI Provider Configuration
# To switch between providers, change the AI_PROVIDER value to one of:
# - "openai" (uses OpenAI API directly)
# - "openrouter" (uses OpenRouter API for access to multiple models)
# - "sambanova" (uses SambaNova API for their models)
# The system will automatically use the appropriate API key and model based on this setting
AI_PROVIDER=sambanova

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
SAMBANOVA_API_KEY=your_sambanova_api_key_here

# Project Information
PROJECT_NAME=BTAssetHub
PROJECT_TYPE=digital asset management

# Site Information (for OpenRouter and general configuration)
SITE_URL=https://example.com/
SITE_NAME=AI Assistant

# Model Configuration
# The model format depends on the selected AI_PROVIDER:
# - For OpenRouter: Use format like "openai/gpt-4o", "openai/gpt-4o-mini", "meta-llama/llama-4-maverick:free", "anthropic/claude-3-opus-20240229"
# - For OpenAI: Use the model name directly like "gpt-4o" or "gpt-4-turbo"
# - For SambaNova: Use the model name like "Meta-Llama-3.1-8B-Instruct", Llama-4-Maverick-17B-128E-Instruct
#
# If no model is specified, a default will be selected based on the provider:
# - OpenRouter: "openai/gpt-4o"
# - OpenAI: "gpt-4o"
# - SambaNova: "Meta-Llama-3.1-8B-Instruct"
AI_MODEL=Llama-4-Maverick-17B-128E-Instruct

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/btassethub
